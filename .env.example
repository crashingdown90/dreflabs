# Database
DATABASE_PATH=./data/dreflabs.db

# Admin Authentication
# SECURITY: Generate strong secrets using: openssl rand -base64 64
# JWT_SECRET must be at least 64 characters long
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_SECRET_AT_LEAST_64_CHARS_LONG_USE_OPENSSL_RAND_BASE64_64
REFRESH_TOKEN_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_SECRET_AT_LEAST_64_CHARS_LONG_USE_OPENSSL_RAND_BASE64_64

# Initial Admin Credentials
# SECURITY: Change these immediately after first deployment
INITIAL_ADMIN_USERNAME=admin
INITIAL_ADMIN_PASSWORD=CHANGE_ME_TO_A_STRONG_PASSWORD
INITIAL_ADMIN_EMAIL=admin@yourdomain.com

# Email Configuration (for contact form and newsletter)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=noreply@yourdomain.com
CONTACT_EMAIL=contact@yourdomain.com

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_SITE_NAME=Your Site Name
NEXT_PUBLIC_SITE_TAGLINE=Your Professional Tagline
NEXT_PUBLIC_SITE_DESCRIPTION=Your site description for SEO

# Contact Information
NEXT_PUBLIC_CONTACT_EMAIL=contact@yourdomain.com
NEXT_PUBLIC_CONTACT_PHONE=+62 XXX XXXX XXXX
NEXT_PUBLIC_CONTACT_LOCATION=Your City, Country

# Social Media URLs
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/username
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/in/username
NEXT_PUBLIC_GITHUB_URL=https://github.com/username
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/username

# SEO Configuration
NEXT_PUBLIC_META_TITLE=Your Site - Professional Title
NEXT_PUBLIC_META_DESCRIPTION=Your meta description for search engines
NEXT_PUBLIC_META_KEYWORDS=keyword1, keyword2, keyword3

# Analytics (Optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_FB_PIXEL_ID=XXXXXXXXXX

# Rate Limiting (Optional - defaults are set in code)
# RATE_LIMIT_LOGIN=5
# RATE_LIMIT_WINDOW=900000

# Security (Optional)
# NODE_ENV=production
# DISABLE_VERBOSE_LOGGING=true
